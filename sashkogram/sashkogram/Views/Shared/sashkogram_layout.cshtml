<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/sashkoGramStyle.css" />
    <link rel="shortcut icon" href="~/Content/images/string.png">

    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bodyClass">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home/Index/">
                            <img src="~/Content/images/string.png" class="logoPick" />
                        </a>
                    </li>
                    <li> 
                        <form method="get">
                            <input class="filterInput" type="text" value="Search" />
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content placeForPhotos">
        @RenderBody()
        <hr />
        <footer>
            <p class="footerStyle">&copy; @DateTime.Now.Year – SASHKOGRAM</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
