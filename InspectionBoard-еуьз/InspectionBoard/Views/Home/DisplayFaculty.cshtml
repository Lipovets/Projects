@model IEnumerable<InspectionBoard.Domain.Entity.Faculty>

@{
    ViewBag.Title = "Факультети";
    Layout = "~/Views/Shared/Body.cshtml";
}

@Styles.Render("~/Content/sortStyle.css")

<h2>Список факультетів</h2>

<table class="table" id="grid">
    <thead>
        <tr>

            <th data-type="string">
                Спеціальність
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <a href="/Home/DisplaySpecialty/@item.Id#section2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
@Scripts.Render("~/Scripts/scriptSort.js")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}